{
  "name": "voa",
  "version": "0.1.0",
  "private": true,
  "description": "Quran recitation validator with tajweed checking",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "api": "npm run dev --workspace=@voa/api",
    "mobile": "npm run start --workspace=@voa/mobile",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces",
    "typecheck": "npm run typecheck --workspaces"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
